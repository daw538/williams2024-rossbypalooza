@article{ji2023-Inner,
  title = {Inner {{Habitable Zone Boundary}} for {{Eccentric Exoplanets}}},
  author = {Ji, Xuan and Bailey, Nora and Fabrycky, Daniel and Kite, Edwin S. and Jiang, Jonathan H. and Abbot, Dorian S.},
