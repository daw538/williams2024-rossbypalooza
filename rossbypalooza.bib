@article{showman2015-THREEDIMENSIONAL,
  title = {{{THREE-DIMENSIONAL ATMOSPHERIC CIRCULATION OF WARM AND HOT JUPITERS}}: {{EFFECTS OF ORBITAL DISTANCE}}, {{ROTATION PERIOD}}, {{AND NONSYNCHRONOUS ROTATION}}},
  shorttitle = {{{THREE-DIMENSIONAL ATMOSPHERIC CIRCULATION OF WARM AND HOT JUPITERS}}},
